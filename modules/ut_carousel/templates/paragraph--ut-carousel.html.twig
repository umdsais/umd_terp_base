{#
/**
 * @file
 * Theme override to display a UMD Terp Carousel Group Paragraph.
 */
#}

{%
  set classes = [
    'carousel-bg',
    paragraph.field_ut_carousel_style.value ? paragraph.field_ut_carousel_style.value|clean_class,
  ]
%}

{% set style = paragraph.field_ut_carousel_style.value %}

{%  if style == 'carousel-bg-default' %}
	{% set brightness = 'light'%}
{% else %}
	{% set brightness = 'dark'%}
{% endif %}

{% block paragraph %}
	<div {{attributes.addClass(classes).setAttribute('id','umd_terp_paragraph--'~paragraph.id())}}>
		{% block content %}
			<umd-element-carousel-multiple-image data-theme="{{ brightness }}">
				<div slot="images">
					{{ content.field_ut_carousel_items|field_value }}
				</div>
			</umd-element-carousel-multiple-image>
		{% endblock %}
		{{ content|without('field_ut_carousel_items', 'field_ut_carousel_style') }}
	</div>
{% endblock paragraph %}
